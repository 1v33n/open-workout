<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_workout_button"
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:layout_gravity="bottom|right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/ic_circleplus" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1.5">


            <LinearLayout
                android:id="@+id/LinearLayout7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="71dp"
                    android:layout_height="58dp"

                    android:src="@drawable/ic_dumbbell"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView"
                    android:layout_width="257dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="8dp"
                    android:text="OPEN WORKOUT"
                    android:textColor="#000"
                    android:textSize="32dp"

                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent"

            android:layout_weight="4"
            tools:context="${packageName}.${activityClass}">
            <!-- Alternativ fixe Angaben statt Variablen:
            tools:context="com.example.NUTZERNAME.myapplication.MainActivity"> -->

            <ListView
                android:id="@+id/sets_and_exercises"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></ListView>


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"


            android:layout_height="160dp"

            android:layout_weight="2">


            <ImageView
                android:id="@+id/home_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="250dp"
                android:src="@drawable/ic_house_solid" />

            <ImageView
                android:id="@+id/stats_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="250dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_graphic" />


        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

