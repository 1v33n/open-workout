<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"


            android:layout_weight="0.75"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LinearLayout7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="71dp"
                    android:layout_height="58dp"

                    android:src="@drawable/ic_dumbbell"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="257dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="OPEN WORKOUT"
                    android:textColor="#000"
                    android:textSize="32dp"

                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent"

            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="132dp"
                    android:layout_height="50dp"
                    android:text="Choose exercise"
                    android:textColor="#000"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />

                <EditText
                    android:id="@+id/simpleEditText2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/LinearLayout2"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:text="Weight"
                    android:textColor="#000"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />

                <EditText
                    android:id="@+id/simpleEditText4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="kg"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:text="Reps"
                    android:textColor="#000"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="6dp" />

                <EditText
                    android:id="@+id/simpleEditText5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/LinearLayout1"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/newSet"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="142dp"
                    android:layout_marginEnd="118dp"
                    android:src="@drawable/ic_circleplus" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="27dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/canel_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Canel"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    app:backgroundTint="#D2FF0000" />

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Save"

                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    app:backgroundTint="#42A658" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"


            android:layout_height="160dp"

            android:layout_weight="2">


            <ImageView
                android:id="@+id/home_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="250dp"
                android:src="@drawable/ic_house_solid" />

            <ImageView
                android:id="@+id/stats_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="250dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/ic_graphic" />

        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


